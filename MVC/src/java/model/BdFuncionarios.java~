package logica;

import java.util.ArrayList;

/**
 *
 * @author user
 */

public class BdFuncionarios {
    
    private ArrayList<Funcionario> arrayFuncionarios = new ArrayList<>();

    public ArrayList<Funcionario> getArrayFuncionarios() {
        return arrayFuncionarios;
    }

    public void setArrayFuncionarios(ArrayList<Funcionario> arrayFuncionarios) {
        this.arrayFuncionarios = arrayFuncionarios;
    }    
    
    public void addFuncionario(Funcionario f){
        
        arrayFuncionarios.add(f);
    } 
    
    public void rmvFuncionario(String cpf){
        
        for(int i = 0; i < arrayFuncionarios.size(); ++i){
            
            if(getArrayFuncionarios().get(i).getCpf().equals(cpf)){
                
                getArrayFuncionarios().remove(i);
            }
        }
    }
    
    public void listaFuncionario(){
        
        for(int i = 0; i < getArrayFuncionarios().size(); ++i){
            
            System.out.println("Nome....:" + getArrayFuncionarios().get(i).getNome());
            System.out.println("cpf.....:" + getArrayFuncionarios().get(i).getCpf()); 
            System.out.println("");
        }
    }        
}
